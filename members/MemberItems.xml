<GuiXml>
  <Controls>    
    <TopLevelControl name="FarmingPartyMemberItemsWindow" inherits="FarmingPartyWindowBase" movable="true" mouseEnabled="true" clampedToScreen="true" hidden="true" resizeHandleSize="8" tier="MEDIUM">
    <OnUpdate>
      local w, h = self:GetDimensions()
      if ((self.currentWidth ~= w) or (self.currentHeight ~= h)) then
        self.currentWidth = w
        self.currentHeight = h
      end
    </OnUpdate>
    <DimensionConstraints minX="550" minY="150" />
    <Anchor point="TOPLEFT" relativeTo="GuiRoot" relativePoint="TOPLEFT" />
    <OnMoveStop>
      <!-- FarmingParty:OnWindowMoveStop(self) -->
    </OnMoveStop>
    <Controls>
      <Backdrop name="$(parent)BG" inherits="ZO_DefaultBackdrop" />
      <Button name="$(parent)CloseButton" inheritAlpha="true" verticalAlignment="CENTER" horizontalAlignment="CENTER">
        <Anchor point="CENTER" relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetX="-20" offsetY="20" />
        <Dimensions x="48" y="48" />
        <Textures normal="/esoui/art/hud/radialicon_cancel_up.dds" mouseOver="/esoui/art/hud/radialicon_cancel_over.dds" />
        <OnClicked>
          FarmingPartyMemberItemsWindow:SetHidden(true)
        </OnClicked>
      </Button>
      <Label name="$(parent)Title" font="ZoFontHeader3" height="25" inheritAlpha="true" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL" verticalAlignment="TOP" horizontalAlignment="CENTER" text="Items">
        <Anchor point="TOP" relativeTo="$(parent)" relativePoint="TOP" offsetX="-10" offsetY="5" />
      </Label>
      <Control name="$(parent)Headers">
        <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetX="10" offsetY="53" />
        <Dimensions y="32" />
        <Controls>
          <Control name="$(parent)BestItemName" mouseEnabled="true">
            <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetX="15" />
            <Anchor point="BOTTOMLEFT" relativeTo="$(parent)" relativePoint="BOTTOMRIGHT" offsetX="0" />
            <Dimensions x="200" y="32" />  
            <Controls>
              <Label name="$(parent)Name" font="ZoFontGame" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL"  modifyTextType="NONE" horizontalAlignment="LEFT" verticalAlignment="CENTER" text="Best Item">
                <Anchor point="TOPLEFT" relativePoint="TOPLEFT" offsetX="15" />
                <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT"/>
              </Label>
            </Controls>
            <OnMouseEnter>
              <!-- FarmingParty:HeaderToolTip(self, GetString(SK_ITEM_TOOLTIP)) -->
            </OnMouseEnter>
            <OnMouseExit>
              <!-- ClearTooltip(InformationTooltip) -->
            </OnMouseExit>
          </Control>
          <Control name="$(parent)Count">
            <Anchor point="TOPLEFT" relativeTo="$(parent)BestItemName" relativePoint="TOPRIGHT" offsetX="112" />
            <Dimensions x="100" y="32" />
            <Controls>
              <Label name="$(parent)Count" font="ZoFontGame" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL"  modifyTextType="NONE" horizontalAlignment="LEFT" verticalAlignment="CENTER" text="Count">
                <Anchor point="TOPLEFT" relativePoint="TOPLEFT" />
                <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT"/>
              </Label>
            </Controls>
          </Control>
          <Control name="$(parent)TotalValue">
            <Anchor point="TOPLEFT" relativeTo="$(parent)Count" relativePoint="TOPRIGHT" offsetX="10" />
            <Dimensions x="100" y="32" />
            <Controls>
              <Label name="$(parent)TotalValue" font="ZoFontGame" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL"  modifyTextType="NONE" horizontalAlignment="LEFT" verticalAlignment="CENTER" text="Total Value">
                <Anchor point="TOPLEFT" relativePoint="TOPLEFT" offsetX="-2"/>
                <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT"/>
              </Label>
            </Controls>
          </Control>
        </Controls>
      </Control>
      <Control name="$(parent)List" inherits="ZO_ScrollList">
        <DimensionConstraints minX="550" minY="50" />
        <Anchor point="TOPLEFT" relativeTo="$(parent)Headers" relativePoint="BOTTOMLEFT" offsetX="0" offsetY="5"/>
        <Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="BOTTOMRIGHT" offsetX="0" offsetY="0"/>
      </Control>
    </Controls>
    </TopLevelControl>


    <!-- Full-size Data Row (virtual) -->
    <Control name="FarmingPartyItemDataRow" inherits="FarmingPartyListRow" virtual="true">
      <Controls>
        <Control name="$(parent)ItemName" inheritAlpha="true" mouseEnabled="true">
          <Dimensions x="200" y="32" />
          <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetX="15" offsetY="0"/>
          <OnInitialized>
            self.GetText = function(control)
              return control:GetNamedChild("Link"):GetText()
            end
            self.SetText = function(control, text)
                control:GetNamedChild("Link"):SetText(text)
            end
          </OnInitialized>            
          <OnMouseEnter>
              if(string.len(self:GetText()) > 0) then
                InitializeTooltip(ItemTooltip, self)
                ItemTooltip:SetLink(self:GetText())
              end
          </OnMouseEnter>
          <OnMouseExit>
              if(string.len(self:GetText()) > 0) then
                ClearTooltip(ItemTooltip)
              end
          </OnMouseExit>
          <OnMouseUp>
              if upInside then
                  ZO_LinkHandler_OnLinkClicked(self:GetText(), button, self)
              end
          </OnMouseUp>
          <Controls>
            <Label name="$(parent)Link" inheritAlpha="true" verticalAlignment="CENTER" horizontalAlignment="LEFT" wrapMode="ELLIPSIS" font="EsoUI/Common/Fonts/ProseAntiquePSMT.otf|15">
                <Dimensions x="200" y="32" />
                <Anchor point="LEFT" relativeTo="$(parent)" relativePoint="LEFT" offsetX="0" offsetY="0"/>
            </Label>
          </Controls>
        </Control>
        <Label name="$(parent)Count" inheritAlpha="true" verticalAlignment="CENTER" horizontalAlignment="RIGHT" wrapMode="ELLIPSIS" font="EsoUI/Common/Fonts/ProseAntiquePSMT.otf|15">
          <Dimensions x="100" y="32" />
          <Anchor point="TOPLEFT" relativeTo="$(parent)ItemName" relativePoint="TOPRIGHT" offsetX="40" offsetY="0"/>
          <Anchor point="BOTTOMLEFT" relativeTo="$(parent)ItemName" relativePoint="BOTTOMRIGHT" offsetX="40" offsetY="0"/>
        </Label>
        <Label name="$(parent)TotalValue" inheritAlpha="true" verticalAlignment="CENTER" horizontalAlignment="RIGHT" wrapMode="ELLIPSIS" font="EsoUI/Common/Fonts/ProseAntiquePSMT.otf|15">
          <Dimensions x="100" y="32" />
          <Anchor point="TOPLEFT" relativeTo="$(parent)Count" relativePoint="TOPRIGHT" offsetX="40" offsetY="0"/>
          <Anchor point="BOTTOMLEFT" relativeTo="$(parent)Count" relativePoint="BOTTOMRIGHT" offsetX="40" offsetY="0"/>
        </Label>
      </Controls>
    </Control>
  </Controls>
</GuiXml>